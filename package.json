		"luxon": "^1.25.0",
		"preact": "^10.5.2",
		"preact-router": "^3.2.1"
	},
	"devDependencies": {
		"@snowpack/app-scripts-preact": "^1.8.8",
		"@snowpack/plugin-webpack": "^2.0.12",
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/preact": "^2.0.0",
		"@types/chart.js": "^2.9.27",
		"@types/enzyme": "^3.10.7",
		"@types/intro.js": "^2.4.7",

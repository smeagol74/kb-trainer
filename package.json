		"snowpack": "^2.11.1",
		"snowpack-plugin-sass": "^1.0.0",
		"typescript": "^4.0.3"
	},
	"browserslist": [
		">0.75%",
		"not dead",
		"not op_mini all"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{json,js,jsx,ts,tsx,css,scss,md}": "prettier --write"
